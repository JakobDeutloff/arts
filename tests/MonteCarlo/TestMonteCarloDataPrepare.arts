#DEFINITIONS:  -*-sh-*-
#This control file prepares a lot of atmospheric field data for the ARTS-MC examples
#simpleMCGeneral.arts, and simpleMCGeneralGaussian.arts, simpleMC.arts


Main{

output_file_formatSetBinary{
}

IndexSet(nelem){
value=1
}

VectorSet(f_grid){
value=230000000000.0
}

WriteXML( f_grid ){
filename="f_grid.xml.generated"
}

IndexSet(f_index){
value=0
}

IndexSet(stokes_dim){
value=4
}

AtmosphereSet3D{
}

ReadXML(p_grid){
filename="p_grid.xml"
}

ReadXML(lat_grid){
filename="lat_grid.xml"
}

ReadXML(lon_grid){
filename="lon_grid.xml"
}

SpeciesSet(abs_species){
species=["O2","N2","H2O"]
}

AtmRawRead{
basename="tropical"
}

AtmFieldsCalcExpand1D{
}

WriteXML( t_field ){
filename="t_field.xml.generated"
} 

WriteXML( z_field ){
filename="z_field.xml.generated"
} 

WriteXML( vmr_field ){
filename="vmr_field.xml.generated"
} 

r_geoidSpherical{
r=-1
}

nrowsGet(r_geoid){
}

ncolsGet(r_geoid){
}

MatrixSet(z_surface){
value=500.0
}

WriteXML(z_surface){
filename="z_surface.xml.generated"
}

#AgendaSet(surface_prop_agenda){
#  InterpAtmFieldToRteGps( surface_skin_t, t_field ){}
#  surfaceBlackbody{}
#  Ignore(rte_los){}  
#}

abs_lookupInit{
}

ReadXML(abs_lookup){
filename="gas_abs_lookup.xml"
}

abs_lookupAdapt{
}

WriteXML(abs_lookup){
filename="gas_abs_lookup_adapted.xml.generated"
}



cloudboxSetManually{
p1=21617.7922264
p2=17111.6808705
lat1=-1.8
lat2=1.8
lon1=-1.8
lon2=1.8
}


Print(cloudbox_limits){
level=1
}

ParticleTypeInit{
}

ParticleTypeAdd{
filename_scat_data="p30f229-231T214-225r100NP-1ar1_5ice.xml"
filename_pnd_field=""
}

ReadXML(pnd_field_raw){
filename="pnd_field_raw.xml"
}

pnd_fieldCalc{
}

WriteXML(pnd_field){
filename="pnd_field.xml.generated"
}

scat_data_monoCalc{
}

#For some reason SingleScatteringData binary files can't be loaded 
output_file_formatSetAscii{
}

WriteXML(scat_data_mono){
filename="scat_data_mono.xml.generated"
}

WriteXML(cloudbox_limits){
filename="cloudbox_limits.xml.generated"
}


}
