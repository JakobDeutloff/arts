#DEFINITIONS:  -*-sh-*-
#This control file prepares a lot of atmospheric field data for the ARTS-MC examples
#simpleMCGeneral.arts, and simpleMCGeneralGaussian.arts, simpleMC.arts


Main{

output_file_formatSetBinary{
}

IndexSet(nelem){
value=1
}

VectorSet(f_grid){
value=230000000000.0
}

WriteXML ( f_grid ){
filename="data/f_grid.xml.bin"
}

IndexSet(f_index){
value=0
}

IndexSet(stokes_dim){
value=4
}

AtmosphereSet3D{
}

ReadXML(p_grid){
filename="data/p_grid.xml"
}

ReadXML(lat_grid){
filename="data/lat_grid.xml"
}

ReadXML(lon_grid){
filename="data/lon_grid.xml"
}

gas_speciesSet{
species=["O2","N2","H2O"]
}

AtmRawRead{
basename="data/tropical"
}

AtmFieldsCalcExpand1D{
}

WriteXML( t_field ){
filename="data/t_field.xml.bin"
} 

WriteXML( z_field ){
filename="data/z_field.xml.bin"
} 

WriteXML( vmr_field ){
filename="data/vmr_field.xml.bin"
} 

r_geoidSpherical{
r=-1
}

nrowsGet(r_geoid){
}

ncolsGet(r_geoid){
}

MatrixSet(z_surface){
value=500.0
}

WriteXML(z_surface){
filename="data/z_surface.xml.bin"
}

AgendaSet(surface_prop_agenda){
  InterpAtmFieldToRteGps( surface_skin_t, t_field ){}
  surfaceBlackbody{}
}

gas_abs_lookupInit{
}

ReadXML(gas_abs_lookup){
filename="data/gas_abs_lookup.xml"
}

gas_abs_lookupAdapt{
}

WriteXML(gas_abs_lookup){
filename="data/gas_abs_lookup_adapted.xml"
}



cloudboxSetManually{
p1=21617.7922264
p2=17111.6808705
lat1=-1.8
lat2=1.8
lon1=-1.8
lon2=1.8
}


Print(cloudbox_limits){
level=1
}

ParticleTypeInit{
}

ParticleTypeAdd{
filename_scat_data="data/p30f229-231T214-225r100NP-1ar1_5ice.xml"
filename_pnd_field=""
}

ReadXML(pnd_field_raw){
filename="data/pnd_field_raw.xml"
}

pnd_fieldCalc{
}

WriteXML(pnd_field){
filename="data/pnd_field.xml.bin"
}

scat_data_monoCalc{
}

#For some reason SingleScatteringData binary files can't be loaded 
output_file_formatSetAscii{
}

WriteXML(scat_data_mono){
filename="data/scat_data_mono.xml"
}

WriteXML(cloudbox_limits){
filename="data/cloudbox_limits.xml"
}


}
